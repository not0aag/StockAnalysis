{
    "version": 2,
    "buildCommand": "bash build.sh",
    "outputDirectory": "frontend/build",
    "installCommand": "npm install --prefix backend",
    "functions": {
        "api/index.js": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        }
    ]
}